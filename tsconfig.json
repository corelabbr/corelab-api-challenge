{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "rootDirs": [
      "src",
      "test"
    ],
    "target": "ES2019",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/tests/*": [
        "../tests/*"
      ]
    },
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types",
      "@types/",
      "@types/jest"
    ],
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src",
    "test",
    "tests/application/usecases/notes/create/create-note.spec.ts",
    "tests/domain/entity/user.test.ts",
    "tests/application/usecases/notes/delete/delete-note.spec.ts",
    "tests/application/usecases/notes/delete/delete-note.spec.ts",
    "tests/application/usecases/notes/update/update-note.spec.ts",
    "tests/application/usecases/notes/retrieve/get/get-note.spec.ts",
    "tests/application/usecases/notes/retrieve/list/list-notes.spec.ts",
    "tests/application/usecases/notes/retrieve/search/search-note.spec.ts",
    "tests/application/usecases/users/create-user.spec.ts",
    "tests/infra/controllers/controller.test.ts",
    "tests/infra/controllers/create-note-controller.spec.ts",
    "tests/infra/controllers/get-note-controller.spec.ts",
    "tests/infra/database/connection.spec.ts"
  ]
}