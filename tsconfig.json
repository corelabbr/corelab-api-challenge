{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/**/*.ts"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./coverage",
    "./jest.config.ts",
    "./jest.setup.ts",
    "./nodemon.json",
    "./package-lock.json",
    "./package.json",
    "./README.md",
    "./tsconfig.json"
  ]
}