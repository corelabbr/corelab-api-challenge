{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug nexo-task-api (Backend)",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": [
        "${workspaceFolder}/back/src/main/server.ts"
      ],
      "cwd": "${workspaceFolder}/back",
      "skipFiles": ["<node_internals>/**", "**/node_modules/**"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Debug React (Frontend)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3001",
      "webRoot": "${workspaceFolder}/front/src",
      "sourceMaps": true,
      "smartStep": true
    }
  ],
  "compounds": [
    {
      "name": "Debug Full Stack",
      "configurations": [
        "Debug nexo-task-api (Backend)",
        "Debug React (Frontend)"
      ]
    }
  ]
}
