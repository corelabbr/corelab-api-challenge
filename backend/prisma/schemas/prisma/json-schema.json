{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Item": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "favorite": {
          "type": "boolean",
          "default": false
        },
        "color": {
          "type": "string",
          "default": "89CFF0"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "deleted": {
          "type": "boolean",
          "default": false
        },
        "deletedAt": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "item": {
      "$ref": "#/definitions/Item"
    }
  }
}