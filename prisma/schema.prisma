generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id         String   @id @default(uuid())
  title      String
  content    String
  isFavorite Boolean  @default(false)
  color      String   @default("#FFF")
  createdAt  DateTime @default(now())

  @@map("tasks")
}
