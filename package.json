{
  "name": "corelab-api-challenge",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch ./src/index.ts",
    "start": "node ./build/index.js",
    "build": "npx prisma generate && tsc -p . && node ./build/index.js",
    "tsc": "tsc",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:generate": "npx prisma generate"
  },
  "eslintConfig": {
    "extends": [
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@swc/core": "^1.3.104",
    "@swc/jest": "^0.2.30",
    "@types/jest": "29.4",
    "@types/node": "^20.11.5",
    "dotenv": "^16.3.2",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "prisma": "^5.8.1",
    "ts-node": "^10.9.2",
    "tsx": "3.14",
    "typescript": "~5.0"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/mongodb": "^7.0.0",
    "@prisma/client": "^5.8.1",
    "fastify": "^4.25.2"
  },
  "engines": {
    "node": "^16.15.0",
    "npm": "^8.5.5"
  }
}
