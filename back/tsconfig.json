{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",  
    "rootDir": "./src",
    "baseUrl": "src",  
    "typeRoots": [
      "./node_modules/@types", 
      "./types"
    ],
    "paths": {
      "@infrastructure/*": ["infrastructure/*"],
      "@interfaces/*": ["interfaces/*"],
      "@usecases/*": ["usecases/*"],
      "@domain/*": ["domain/*"],
      "@utils/*": ["utils/*"],
      "@main/*": ["main/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
